<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--进度lineView提示style-->
    <style name="sdk_process_tip_line_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_2</item>
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--进度文字提示style-->
    <style name="sdk_process_tip_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/third_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
